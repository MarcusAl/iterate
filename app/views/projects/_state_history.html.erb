<div class="overflow-x-auto">
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Previous Status</th>
        <th>New Status</th>
        <th>Changed by System or User?</th>
      </tr>
    </thead>
    <tbody>
      <% project.state_transitions.order(created_at: :desc).each do |transition| %>
        <tr>
          <td><%= transition.created_at.strftime("%B %d, %Y at %I:%M %p") %></td>
          <td>
            <div class="badge badge-outline"><%= transition.from_state&.titleize || 'None' %></div>
          </td>
          <td>
            <div class="badge badge-outline"><%= transition.to_state.titleize %></div>
          </td>
          <td>
            <%= transition.user.present? ? 'User' : 'System' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
